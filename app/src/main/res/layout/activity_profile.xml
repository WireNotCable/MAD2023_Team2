<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <ImageView
        android:id="@+id/Profile_Home"
        android:layout_width="38dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_icon" />

    <TextView
        android:id="@+id/CurrentProgressAmt"
        android:layout_width="61dp"
        android:layout_height="29dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="663dp"
        android:text="Profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Profile_Edit"
        app:layout_constraintStart_toEndOf="@+id/Profile_Home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/Profile_Edit"
        android:layout_width="51dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pencil_icon" />


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_profilepic"
            android:layout_width="204dp"
            android:layout_height="204dp"
            android:layout_marginStart="145dp"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="181dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.352"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/circle_background"
            app:layout_constraintTop_toBottomOf="@+id/CurrentProgressAmt"
            app:srcCompat="@drawable/icon" />


    <Button
        android:id="@+id/profile_viewprofile"
        android:layout_width="192dp"
        android:layout_height="62dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="169dp"
        android:backgroundTint="@color/black"
        android:text="Profile"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_profilepic" />

</androidx.constraintlayout.widget.ConstraintLayout>
